<div class="row">
    <div class="col-lg-8">
        <h1>Customers</h1>
    </div>
    <div class="col-lg-4">
        <a class="btn btn-primary" href="/customer/create">Add New Customer</a>
    </div>
</div>

<div class="row">
    <table class="table table-striped">
        <tr scope="row">
            <td>
                <div class="row">
                    <div class="col">id</div>
                    <div class="col">Full Name</div>
                    <div class="col">Email</div>
                    <div class="col">Phone</div>
                    <div class="col">Actions</div>
            </td>
        </tr>
        {{#each customers}}
        <tr scope="row">
            <td>
                <div class="row">
                    <div class="col">
                        {{this.dataValues.id}}
                    </div>
                    <div class="col">
                        {{this.dataValues.first_name}} {{this.dataValues.last_name}}
                    </div>
                    <div class="col">
                        {{this.dataValues.email}}
                    </div>
                    <div class="col">
                        {{this.dataValues.phone}}
                    </div>
                    <div class="col">
                        <a href="/customer/details/{{this.dataValues.id}}">View</a>
                        <a href="/customer/edit/{{this.dataValues.id}}">Edit</a>
                        <a href="/customer/delete/{{this.dataValues.id}}">Delete</a>
                        <a href="/order/create/{{this.dataValues.id}}">Order</a>
                    </div>
                </div>
            </td>
        </tr>
        {{/each}}

    </table>
</div>