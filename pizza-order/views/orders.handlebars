<div class="row">
    <div class="col-lg-8">
        <h1>Orders</h1>
    </div>
</div>

<div class="row">
    <table class="table table-striped">
        <tr scope="row">
            <td>
                <div class="row">
                    <div class="col">id</div>
                    <div class="col">Customer</div>
                    <div class="col">Size</div>
                    <div class="col">Total</div>
                    <div class="col">Actions</div>
                </div>    
            </td>
        </tr>
        {{#each orders}}
<tr scope="row">
            <td>
                <div class="row">
                    <div class="col">{{this.dataValues.id}}</div>
                    <div class="col">
                        {{this.dataValues.Customer.dataValues.first_name}}
                        {{this.dataValues.Customer.dataValues.last_name}}
                        </div>
                    <div class="col">{{this.dataValues.size}}</div>
                    <div class="col">{{this.dataValues.total}}</div>
                    <div class="col">
                       <a href="/order/details/{{this.dataValues.id}}">View</a> 
                       <a href="/order/edit/{{this.dataValues.id}}">Edit</a> 
                       <a href="/order/delete/{{this.dataValues.id}}">Delete</a> 
                        </div>
                </div>    
            </td>
        </tr>
        {{/each}}

</table>
</div>        